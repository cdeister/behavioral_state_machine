<?xml version="1.0" encoding="utf-8"?>

<machine Name="BeahvioralTraining" Subject="test" NumConditions="1" MaximumTrials="100" ITILength="1000" xmlns="http://www.timbuschman.com/behavioralstatemachine" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.timbuschman.com/behavioralstatemachine file:///C:/BehavioralControl/BSM%20XML/BSM.xsd" xsi:noNamespaceSchemaLocation="BSM.xsd">

  <State Name="TouchWindow" ID="1" Interruptable="true">
    <Transition To="NoResponseEndState">
      <Logic>TimeInState &gt;= StimTime</Logic>
    </Transition>
    <Transition To="Reward">
      <Logic>sum(abs(AnalogTouch)) &gt;= TouchThreshold</Logic>
    </Transition>
  </State>
  
  <State Name="Reward" ID="2" Interruptable="false">
    <Transition To="CorrectEndState">
      <Logic>TimeInState &gt;= RewardTime</Logic>
    </Transition>
    <AnalogOutput VarName="Stimulator" Function="SinStim"/>
    <DigitalOutput VarName="DigitalOut" Function="[ones(Dropsize, 1); zeros(2, 1)]" doStrobe="false" doTrue="true"/>
  </State>

<AnalogInput SourceType="ni" SourceName="Dev1" SourceRate="2000" KeepSamples="10" SaveSamples="true" Name="AnalogTouch">
    <Channel>8</Channel>
  </AnalogInput>
  
  <ConditionVar Name="IdleTime" Function="500"/>
  <ConditionVar Name="StimTime" Function="IdleTime+5*CurrentTrial"/>
  <ConditionVar Name="SinStim" Function="sin([0:1000]'/1000*2*pi*10*CurrentCondition)"/>
  <ConditionVar Name="RewardTime" Function="100"/>
  <ConditionVar Name="Dropsize" Function="100"/>
  <ConditionVar Name="TouchThreshold" Function=".1"/>
  
  <AnalogOutput SourceType="ni" SourceName="Dev1" SourceRate="1000" Name="Stimulator">
    <Channel>1</Channel>
  </AnalogOutput>
  
  <DigitalOutput SourceName="Dev1" SourceType="nidaq" Name="RewardOut" DefaultValue="0">
    <Channel>16</Channel>
  </DigitalOutput>
  
  
  
</machine>

